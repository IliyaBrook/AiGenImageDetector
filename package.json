{
	"name": "vite-plugin-web-extension-example",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"build:hmr": "rollup --config src/utils/defaultUtils/reload/rollup.config.mjs",
		"wss": "node src/utils/defaultUtils/reload/initReloadServer.js",
		"dev": "pnpm build:hmr && (run-p wss build:watch)",
		"build:watch": "pnpm build --watch",
		"format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
		"format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
		"remove-comments": "node remove-comments.cjs && pnpm run format"
	},
	"dependencies": {
		"onnxruntime-web": "^1.22.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"webextension-polyfill": "^0.10.0"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/chrome": "0.0.308",
		"@types/node": "^22.15.21",
		"@types/react": "^18.2.30",
		"@types/react-dom": "^18.2.10",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.21",
		"chokidar": "^3.5.3",
		"glob": "^11.0.2",
		"npm-run-all": "^4.1.5",
		"postcss-nested": "^7.0.2",
		"prettier": "^3.2.5",
		"strip-comments": "github:IliyaBrook/strip-comments",
		"tslib": "^2.8.1",
		"vite": "^5.0.0",
		"vite-plugin-static-copy": "^3.0.0",
		"ws": "8.18.1"
	}
}
